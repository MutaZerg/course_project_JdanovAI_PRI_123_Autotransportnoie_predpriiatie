@model IEnumerable<VehicleCompany.Models.Seat>
@{
    ViewData["Title"] = "Seats";
}

<h1>Seats</h1>
<p><a asp-action="Create">Create New</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Vehicle</th>
            <th>Booked</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@(item.AssignedVehicle?.Vehicle_info ?? item.AssignedVehicleId.ToString())</td>
                <td>@(item.IsBooked ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
