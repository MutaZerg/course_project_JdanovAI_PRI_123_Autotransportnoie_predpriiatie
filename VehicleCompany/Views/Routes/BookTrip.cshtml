@model VehicleCompany.Models.BookTripViewModel
@{
    ViewData["Title"] = "Book a trip";
}

<h1>Book a trip — Route</h1>
<p class="text-muted">Travel time: @Model.Route.Travel_time | Price: @Model.Route.Price</p>

@if (Model.Route.RouteStops?.Any() == true)
{
    <p><strong>Stops:</strong>
        @string.Join(" → ", Model.Route.RouteStops.OrderBy(rs => rs.StopId).Select(rs => rs.Stop?.Name ?? "—"))
    </p>
}

<h2 class="mt-4">Trips and available seats</h2>

@if (!Model.TripsWithSeats.Any())
{
    <p>No trips on this route at the moment.</p>
}
else
{
    @foreach (var tws in Model.TripsWithSeats)
    {
        <div class="card mb-3">
            <div class="card-header">
                <strong>Trip</strong> @tws.Trip.Id — @tws.Trip.Start_time.ToString("g") → @tws.Trip.End_time.ToString("g")
            </div>
            <div class="card-body">
                @if (!tws.AvailableSeats.Any())
                {
                    <p class="text-muted mb-0">No available seats.</p>
                }
                else
                {
                    <p class="mb-2">Available seats:</p>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var seat in tws.AvailableSeats)
                        {
                            <a asp-controller="Bookings" asp-action="Create" asp-route-tripId="@tws.Trip.Id" asp-route-seatId="@seat.Id" class="btn btn-outline-primary">Seat @seat.Id — Booking</a>
                        }
                    </div>
                }
            </div>
        </div>
    }
}

<div class="mt-3">
    <a asp-action="Index">Back to Routes</a>
</div>
