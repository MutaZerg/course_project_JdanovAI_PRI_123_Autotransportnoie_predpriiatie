@model VehicleCompany.Models.Route

@{
    ViewData["Title"] = "Route Details";
}

<h1>Route Details</h1>

<div>
    <h4>Route</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Travel time</dt>
        <dd class="col-sm-10">@Model.Travel_time</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Stops</dt>
        <dd class="col-sm-10">
            @if (Model.RouteStops?.Any() == true)
            {
                <ol class="mb-0">
                    @foreach (var rs in Model.RouteStops.OrderBy(rs => rs.StopId))
                    {
                        <li>@(rs.Stop?.Name ?? "â€”")</li>
                    }
                </ol>
            }
            else
            {
                <span>No stops defined.</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="BookTrip" asp-route-id="@Model?.Id" class="btn btn-success">Book a trip</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
