@model VehicleCompany.Models.UserSession
@{
    ViewData["Title"] = "Profile";
}

<div class="card">
    <div class="card-header">
        <h4>Profile</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">User name</dt>
            <dd class="col-sm-9">@Model.UserName</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Roles</dt>
            <dd class="col-sm-9">@(Model.Roles?.Count > 0 ? string.Join(", ", Model.Roles) : "—")</dd>
            <dt class="col-sm-3">Permissions</dt>
            <dd class="col-sm-9">@(Model.Permissions?.Count > 0 ? string.Join(", ", Model.Permissions) : "—")</dd>
        </dl>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
    </div>
</div>
